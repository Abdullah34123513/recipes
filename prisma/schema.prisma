generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  recipes   Recipe[]
  
  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Recipe {
  id           String      @id @default(cuid())
  title        String
  ingredients  String      // JSON string of ingredients
  steps        String      // JSON string of steps
  image        String?
  prepTime     Int         // in minutes
  servingSize  Int
  status       RecipeStatus @default(PENDING)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  publishedAt  DateTime?
  
  authorId     String
  author       User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("recipes")
}

enum RecipeStatus {
  PENDING
  APPROVED
  PUBLISHED
  REJECTED
}